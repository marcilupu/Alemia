            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button fx:id="vizualizareLoguriLoginLogoutButton" layoutX="14.0" layoutY="197.0" mnemonicParsing="false"
                onAction="#handleVizualizareLoguriLoginLogoutButtonAction" prefHeight="60.0" prefWidth="180.0"
                styleClass="login-button" text="Log-uri Login/Logout">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
    </children>
